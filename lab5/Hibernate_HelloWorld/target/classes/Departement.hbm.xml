<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="Model.Departement" table="Departement">
		<id name="nom" column="nom" type="string" />
		<property name="date" column="date" type="string" />
		<property name="adresse" column="adresse" type="string" />
		<property name="telephone" column="telephone" type="string" />
		
		<set name="equipe" fetch="join">
			<key column=" nom " />
			<one-to-many class="Model.Departement" />
		</set>
		<set name="articles" fetch="join">
			<key column=" cid " column=" soumisLe " column=" departement " />
			<one-to-many class="Model.Commande" />
		</set>

	</class>
</hibernate-mapping>