<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
	"-//Hibernate/Hibernate Configuration DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>

		<property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
		<property name="connection.url">jdbc:postgresql://127.0.0.1:5432/tp5</property>
		<property name="connection.username">brunobousquet</property>
		<property name="connection.password"></property>

		<property name="show_sql">true</property>

		<mapping resource="Article.hbm.xml" />
		<mapping resource="Chercheur.hbm.xml" />
		<mapping resource="Departement.hbm.xml" />
		<mapping resource="Equipe.hbm.xml" />

	</session-factory>
</hibernate-configuration>
